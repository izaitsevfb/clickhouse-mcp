[sqlfluff]
dialect = clickhouse
templater = jinja
exclude_rules = L034,L016

[sqlfluff:indentation]
tab_space_size = 4
indent_unit = space
    
[sqlfluff:layout:type:comma]
line_position = trailing

[sqlfluff:rules:L010]  # Keywords
capitalisation_policy = upper

[sqlfluff:rules:L030]  # Function names
capitalisation_policy = upper